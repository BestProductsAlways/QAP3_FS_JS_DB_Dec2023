<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Simple Node App</title>
  <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
  <h1>Items</h1>
  <ul>
    <% items.forEach(item => { %>
      <li>
        <strong><%= item.name %></strong> - <%= item.description %>
        
        <!-- GET Form (View) -->
        <form action="/items/<%= item.id %>" method="GET" style="display:inline;">
          <button type="submit">View</button>
        </form>

        <!-- POST Form (Add Item) -->
        <form action="/items" method="POST" style="display:inline;">
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" required>
          <label for="description">Description:</label>
          <input type="text" id="description" name="description">
          <button type="submit">Add Item</button>
        </form>

        <!-- PUT Form (Edit) -->
        <form action="/items/<%= item.id %>/edit" method="GET" style="display:inline;">
          <button type="submit">Edit</button>
        </form>

        <!-- PATCH Form (Update Description) -->
        <form action="/items/<%= item.id %>/update-description" method="POST" style="display:inline;">
          <button type="submit">Update Description</button>
        </form>

        <!-- DELETE Form -->
        <form action="/items/<%= item.id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>

      </li>
    <% }); %>
  </ul>

  <!-- POST Form (Add Item) -->
  <form action="/items" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required>
    <label for="description">Description:</label>
    <input type="text" id="description" name="description">
    <button type="submit">Add Item</button>
  </form>
</body>
</html>
